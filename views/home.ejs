<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>all jobs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background-color: whitesmoke;
        }
        .job-table {
            margin-top: 30px;
        }
        .table th, .table td {
            border-top: none;
            border-bottom: 1px solid #dee2e6;
        }
        .table thead th {
            border-bottom: 2px solid #dee2e6;
        }
        
    </style>
</head>
<body>
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                   <% if (userRole === 'Admin' || userRole === 'Editor') { %>
                    <ul class="nav">
                        <li class="nav-item"><button class="btn "><a class="nav-link bg-dark text-light" href="/createJob">Create Jobs</a></button></li>
                    </ul>
                   <% } %>
                   <% if (userRole === 'Admin') { %>
                    <ul class="nav">
                        <li class="nav-item"><button class="btn "><a class="nav-link bg-success text-light" href="/createRole">Create Role</a></button></li>
                    </ul>
                   <% } %>
            </div>
                <div class="col-lg-6">
                    <div class="d-flex justify-content-end">
                        <ul class="nav">
                            <li class="nav-item"><button class="btn"><a class="nav-link bg-danger text-light" href="/logout">Logout</a></button></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    <section class="p-3">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <table class="table job-table">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">S.No.</th>
                                <th scope="col">Job Title</th>
                                <th scope="col">Experience</th>
                                <th scope="col">Job Location</th>
                                <th scope="col">Salary</th>
                                <th scope="col">Company Name</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">
                            <% jobs.forEach((job, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><%= job.jobTitle %></td>
                                    <td><%= job.experience %></td>
                                    <td><%= job.jobLocation %></td>
                                    <td><%= job.salary %> </td>
                                    <td class="d-flex justify-content-between"><%= job.companyName %> 
                                          <% if (userRole === 'Admin' || userRole === 'Editor') { %>
                                            <div> <span class="btn btn-warning"><a class="nav-link" 
                                                href="/edit/<%= job._id %>">Edit</a></span>
                                                <span class="btn btn-danger"><a  class="nav-link" 
                                                href="/delete/<%= job._id %>">Delete</a></span>
                                    </div>
                                          <% } %>
                                </td>      
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="/javascript/home.js" defer></script>
</body>
</html>